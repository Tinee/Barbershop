@using BarberShop.Models
@model BarberShop.Models.RegisterModel

@using (Html.BeginForm("Index", "Register"))
{
    <div class="editor-label">
        @Html.LabelFor(model => model.FirstName)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.FirstName,Model)
        @Html.ValidationMessageFor(model => model.FirstName,"*")

    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.LastName, Model)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.LastName, Model)
        @Html.ValidationMessageFor(model => model.LastName, "*")

    </div>
    <div class="editor-field">
        @Html.LabelFor(model => model.Email)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Email, Model)
        @Html.ValidationMessageFor(model => model.Email, "*")
    </div>
    <div class="editor-field">
        @Html.LabelFor(model => model.Password)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Password, Model)
        @Html.ValidationMessageFor(model => model.Password, "*")
    </div>
    <div class="editor-field">
        @Html.Label("Upprepa Lösenord")
    </div>
    <div class="editor-field">
        @Html.Password("repeatPassword")
    </div>
    <div class="editor-field">
        @Html.LabelFor(model => model.Adress)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Adress, Model)
    </div>
    <div class="editor-field">
        @Html.LabelFor(model => model.ZipCode)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.ZipCode, Model)
    </div>
    <div class="editor-field">
        @Html.LabelFor(model => model.City)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.City, Model)
    </div>
    <div class="editor-field">
        @Html.LabelFor(model => model.Phone, Model)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Phone, Model)
        @Html.ValidationMessageFor(model => model.Phone, "*")
    </div>
    <h4 style="color:red">@ViewBag.PasswordIsNotEqual</h4>

    <h4 style="color:red">@ViewBag.RegisterResult</h4>

    <input type="submit" name="btnRegister" value="Klar " />
}
